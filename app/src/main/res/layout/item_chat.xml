<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageUser"
        app:layout_constraintTop_toTopOf="@id/imageUser"
        app:layout_constraintEnd_toStartOf="@+id/textDate"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:text="@tools:sample/full_names"
        android:textStyle="bold"
        android:textColor="@color/color_black"/>

    <TextView
        android:id="@+id/textMessage"
        app:layout_constraintTop_toBottomOf="@+id/textUsername"
        app:layout_constraintStart_toEndOf="@id/imageUser"
        app:layout_constraintEnd_toStartOf="@id/textUnreadMessage"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="@tools:sample/lorem"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray"/>

    <TextView
        android:id="@+id/textDate"
        android:textColor="@color/color_light_green"
        tools:text="@tools:sample/date/day_of_week"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textUnreadMessage"
        app:layout_constraintTop_toBottomOf="@id/textDate"
        app:layout_constraintEnd_toEndOf="@id/textDate"
        android:background="@drawable/circle_green"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/textUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageUser"
        android:layout_marginTop="16dp"
        android:background="@color/color_gray_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>